# Variables de entorno para el Backend Flask
# Copia este archivo como .env y configura tus valores reales

# === CONFIGURACIÓN DE BASE DE DATOS MYSQL ===
MYSQL_USER=tu_usuario_mysql
MYSQL_PASSWORD=tu_contraseña_mysql
MYSQL_HOST=localhost
MYSQL_DATABASE=medsc_db
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=tu_contraseña_root_mysql

# === CONFIGURACIÓN DE SUPABASE ===
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_KEY=tu_supabase_anon_key

# === CONFIGURACIÓN DE FLASK ===
SECRET_KEY=tu-clave-secreta-super-segura-cambiar-en-produccion
FLASK_ENV=development
FLASK_DEBUG=true

# === CONFIGURACIÓN DE JWT ===
JWT_SECRET_KEY=tu_jwt_secret_key_muy_segura

# === MODO DE OPERACIÓN ===
# false = solo Supabase, true = con base de datos MySQL
USE_DATABASE=false
